<div class="container">
  <h1>
    <%= @cocktail.name %>
  </h1>

  <ul>
    <% @cocktail.doses.each do |dose|%>
      <li>
        <%= dose.description %> <%= dose.ingredient.name %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Back to cocktails", cocktails_path %>
